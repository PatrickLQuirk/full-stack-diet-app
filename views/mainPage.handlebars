<!-- add message at top "select diet" -->
<div class="row">
  <article class="white-text col s12 center-align">
    <h1>Select a Diet and click Submit.</h1>
    <h1>To add a food, enter the food name and click Add Food.</h1>

    <!-- add drop down list of diets -->

    <div class="white-text form-group">
      <select name="diet-type" id="diet-search" class="select-dropdown">
        {{!-- <option value="1">Keto</option>
        <option value="2">Vegan</option>
        <option value="3">Paleo</option> --}}
        {{#each diets as |diet|}}
        <option value="{{diet.id}}">{{diet.diet_name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="white-text form-group">
      <button class="btn" id="select-diet" type="submit">Submit</button>
    </div>

    <!-- add food button and form field -->
    <form class="white-text form-group">
      <div>
        <input class="#ffffff white-text" type="text" id="food-input" name="food-name" placeholder="Add food name">
      </div>
      <div>
        {{!-- <div class="row">
          <div class="col s8 offset-s2">
            <input class="checkbox" type="checkbox" id="keto-select" name="diet" value="1">
            <label for="keto-select">Keto</label>
          </div>
        </div>
        <div class="row">
          <div class="col s8 offset-s2">
            <input class="checkbox" type="checkbox" id="vegan-select" name="diet" value="2">
            <label for="vegan-select">Vegan</label>
          </div>
        </div>
        <div class="row">
          <div class="col s8 offset-s2">
            <input class="checkbox" type="checkbox" id="paleo-select" name="diet" value="3">
            <label for="paleo-select">Paleo</label>
          </div>
        </div> --}}
        {{#each diets as |diet|}}
        <div class="row">
          <div class="col s8 offset-s2">
            <input class="checkbox" type="checkbox" id="{{diet.id}}-select" name="diet" value="1">
            <label for="{{diet.id}}-select">{{diet.diet_name}}</label>
          </div>
        </div>
        {{/each}}
      </div>
      <div>
        <button class="teal lighten-2 #ffffff white-text" id="add-food" type="submit">Add Food</button>
      </div>
    </form>
  </article>
</div>

